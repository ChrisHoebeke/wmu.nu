<div class="buses schedule" >
  <h1>Maritime News <small>Last Updated: <%= Time.now.strftime('%H:%M') %></small></h1>
<div class='bus-spinner centered'></div>
<table  class="buses table table-striped">
        <tbody>
          <% for item in items %>
            <tr>
              <td>
                <div class="hero-unit">
                  <h1><a href='<%= item.link %>'><%= item.title.gsub("<b>","").gsub("</b>", '') %></a></h1>
                  <p><%= item.description.gsub("<b>","").gsub("</b>", '') %></p>
                  <p><%= item.pubDate %></p> 
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
